<Window x:Class="serial_monitor.Windows.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:serial_monitor.Windows"
        mc:Ignorable="d"
        Title="Logs" Height="300" Width="700"
        Closing="Window_Closing">
    <Grid>
        <TextBox Name="LogTextBox" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" IsReadOnly="true" Margin="10,10,10,10"/>
    </Grid>
</Window>
